<%- model_class = Genome -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human %></h1>
</div>
<%= simple_form_for @genome, html: { class: "form-horizontal" } do |f| %>
    <%= f.error_notification %>
    <%= f.input :organism_id, collection: Organism.all, prompt: "Choose an organism...", required: true %>
    <%= f.input :build_version, as: :string, required: true %>

    <%= f.input :meta, as: :string, required: false %>
    <div class="form-actions">
        <%= f.button :submit, :class => 'btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    genomes_path, :class => 'btn' %>
    </div>
<% end %>

