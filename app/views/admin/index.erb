<% @users.each do |user| %>
<div class=<% if user.admin %>"boxedin userAdmin"<% else %>"boxedin userNormal"<% end %>>
	<p><%= user.first_name %></p>
	<p><%= user.last_name %></p>
	<p><%= user.email %></p>
	
	<% if !user.admin %>
	<%= button_to 'Edit', :controller => 'admin', :action => 'edit',:class => "btn btn-info", :user_id => user.id %>
	<a href="#" class="btn btn-danger" data-confirm="Are you sure?" data-method="delete" rel="nofollow">Delete</a>
	<% end %>
</div>
<hr>
<% end %>