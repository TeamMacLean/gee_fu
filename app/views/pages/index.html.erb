<div class="jumbotron centerit">
    <h1>OpenAshDieBack - GeeFu</h1>

    <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en">Tweet</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

    <script src="https://apis.google.com/js/plusone.js"></script>
    <g:plus action="share"></g:plus>

    <p class="lead">Welcome to the OpenAshDieBack GeeFu site.</p>

    <p class="lead">
        You need to <%= link_to "sign in", new_user_session_path %>
        (or <%= link_to "sign up", new_user_registration_path %>) before you can access the data.
    </p>

    <% if false %>
        <p class="lead">
            Or you can
            <%= link_to "browse", browse_path %>
            the data that already exists.
        </p>
    <% end %>

    <div class="row-fluid">
        <%= link_to(new_user_session_path, :class => "btn btn-primary") do %>
            <i class="icon-user icon-white"></i>
            Sign In
        <% end %>
        <%= link_to(new_user_registration_path, :class => "btn btn-success") do %>
            <i class="icon-pencil icon-white"></i>
            Sign up
        <% end %>
        <% if false %>
            <%= link_to(browse_path, :class => "btn btn-action") do %>
                <i class="icon-search icon-white"></i>
                Browse
            <% end %>
        <% end %>

    </div>

</div>

